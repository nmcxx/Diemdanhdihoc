<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/dialog_add_sv_excel_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Vui lòng tạo file .xls theo mẫu sau"
        android:gravity="center_horizontal" />


    <ImageView
        android:id="@+id/dialog_add_sv_excel_pic"
        android:layout_width="113dp"
        android:layout_height="68dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        app:srcCompat="@mipmap/tips"
        android:layout_below="@+id/dialog_add_sv_excel_txt"/>

    <Button
        android:id="@+id/dialog_add_sv_excel_btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:text="Đã hiểu"
        android:layout_below="@+id/dialog_add_sv_excel_pic"/>


</RelativeLayout>